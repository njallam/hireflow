.card
  .card-header Business
  .card-body
    %h5.card-title= business.name
    .card-deck
      .card
        = image_tag 'shards.svg'
      .card
        .card-header About Us
        .card-body
          %p.card-text= business.description
      - if business.city
        .card
          .card-header Where
          .card-body
            %p.card-text= business.city
            %iframe.googlemap{ src: "https://www.google.com/maps/embed/v1/place?q=#{business.city}&key=AIzaSyCdi-CnUO45jF37i_xlG1zmDDQg2v4L0Xg", width: '100%', height: '100%', frameborder: '0' }
