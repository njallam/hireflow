.d-flex.flex-column.flex-md-row.align-items-center.p-3.px-md-4.mb-3.bg-white.border-bottom.box-shadow
  %a.navbar-brand{ href: root_path }
    = image_tag 'shards.svg', class: 'navbar-logo'
  %h5.my-0.mr-md-auto.font-weight-bold HireFlow
  - if applicant_signed_in?
    %nav.my-2.my-md-0.mr-md-3
      %a.p-2.text-dark{ href: jobs_path } Search
      %a.p-2.text-dark{ href: '#' } Applications
      %a.p-2.text-dark{ href: '#' } Profile
    = link_to('Logout', destroy_applicant_session_path, method: :delete)
  - elsif business_signed_in?
    %nav.my-2.my-md-0.mr-md-3
      %a.p-2.text-dark{ href: jobs_path } Jobs
      %a.p-2.text-dark{ href: edit_profile_path } Profile
    = link_to('Logout', destroy_business_session_path, method: :delete)
  - else
    %nav.my-2.my-md-0.mr-md-3
    .btn-group
      %button.btn.btn-primary.mr-2.dropdown-toggle{ 'aria-expanded': 'false', 'aria-haspopup': 'true', 'data-toggle': 'dropdown', type: 'button' }
        Sign In
      .dropdown-menu
        %a.dropdown-item{ href: new_applicant_session_path } Applicant
        .dropdown-divider
        %a.dropdown-item{ href: new_business_session_path } Business
    %a.btn.btn-outline-primary.mx-2{ href: sign_up_path } Sign Up
