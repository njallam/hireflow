.card.m-3.full-card-link
  %a{ href: application_path(application) }
  .card-body
    .row
      .col-md-2.text-center
        - if applicant_signed_in?
          - if application.job.business.logo.attached?
            = image_tag application.job.business.logo, class: 'img', style: 'max-width:100%; max-height:100%; height: auto; width:auto;'
          - else
            = image_tag 'shards.svg', class: 'img', style: 'height: 100%'
      .col-md-8.flex-col
        - if applicant_signed_in?
          %p.my-0= application.job.title
          %p.my-0= application.job.business.name
          %p.my-0= application.job.created_at.strftime('%d/%m/%Y')
        - else
          %p.my-0= application.applicant.name
          %p.my-0= application.job.position
          %p.my-0= application.job.created_at.strftime('%d/%m/%Y')
      .col-md-2.px-auto
        - if application.personal?
          %span.btn.step-2.ml-0{ class: personal_color(application) }
            = icon 'fas', 'user-circle', class: 'fa-3x'
        - if application.cover?
          %span.btn.step-2.ml-0{ class: cover_color(application) }
            = icon 'fas', 'edit', class: 'fa-3x'
        - if application.screening?
          %span.btn.step-2.ml-0{ class: screening_color(application) }
            = icon 'fas', 'clock', class: 'fa-3x'
        - if application.interview?
          %span.btn.step-2{ class: interview_color(application) }
            = icon 'fas', 'building', class: 'fa-3x'
        - if application.accepted?
          %span.btn.step-2.mr-0{ class: accepted_color(application) }
            = icon 'fas', 'handshake', class: 'fa-3x'
