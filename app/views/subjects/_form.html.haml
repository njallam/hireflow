= simple_form_for @subject, url: @subject.new_record? ? applicant_profile_education_subjects_path : applicant_profile_education_subject_path do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :title
    = f.input :result

  .form-actions
    = f.button :submit
