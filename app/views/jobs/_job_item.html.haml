.card.m-3.full-card-link
  %a{ href: job_path(job) }
  .card-body
    .row
      .col-md-2.text-center
        - if job.business.logo.attached?
          = image_tag job.business.logo, class: 'img', style: 'max-width:100%; max-height:100%; height: auto; width:auto;'
        - else
          = image_tag 'shards.svg', class: 'img', style: 'height: 100%'
      .col-md-10.flex-col
        %h5.my-0= job.position
        %p.my-0
          = job.business.name
          - if job.salary
            &mdash; (approx. Â£#{job.salary} p.a.)
        %p.my-0.text-muted
          - if job.start_date
            - if job.end_date
              #{job.start_date.strftime('%d/%m/%Y')} &ndash; #{job.end_date.strftime('%d/%m/%Y')}
            - else
              Starting #{job.start_date.strftime('%d/%m/%Y')}
          - elsif job.end_date
            Ending #{job.end_date.strftime('%d/%m/%Y')}
          (Posted: #{job.created_at.strftime('%d/%m/%Y')})
