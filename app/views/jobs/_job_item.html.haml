.card.m-3.full-card-link
  %a{ href: job_path(job) }
  .card-body
    .row
      .col-auto.mr-2
        = image_tag 'shards.svg', class: 'img', style: 'height: 100%'
      .col-md-9.flex-col
        %h5.my-0= job.position
        %p.my-0= job.business.name
        %p.my-0.text-muted= job.created_at.strftime('%d/%m/%Y')
